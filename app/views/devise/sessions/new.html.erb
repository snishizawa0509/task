<div class="page-header">
  <h1>Sing in</h1>
</div>
<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form-horizontal note" }) do |f| %>

  <div class="form-group">
    <%= f.label :メールアドレス, :class => 'control-label col-lg-3' %>
    <div class="col-lg-7">
      <%= f.email_field :email, autofocus: true, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :パスワード, class: 'control-label col-lg-3' %>
    <div class="col-lg-7">
      <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
    </div>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

<div class="form-group">
  <%= f.submit "Sing in", class: 'btn primary-btn' %>
</div>
<% end %>

<%= render "devise/shared/links" %>
