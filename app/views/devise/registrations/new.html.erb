<div class="page-header">
  <h1>Sing up</h1>
</div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "form-horizontal note" }) do |f| %>
  <% if resource.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= resource.errors.count %> 件のエラーがあります。</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% resource.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label 'ユーザーネーム', class: 'control-label col-lg-3' %>
    <div class="col-lg-7">
      <%= f.text_field :name, autofocus: true, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :メールアドレス, :class => 'control-label col-lg-3' %>
    <div class="col-lg-7">
      <%= f.email_field :email, autofocus: true, class: 'form-control' %>
    </div>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="form-group">
    <%= f.label :パスワード, class: 'control-label col-lg-3' %>
    <div class="col-lg-7">
      <%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: '6文字以上にして下さい。' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :パスワード確認, class: 'control-label col-lg-3' %>
    <div class="col-lg-7">
      <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %>
    </div>
  </div>
  <%= f.submit "Sing up", class: 'btn primary-btn' %>
<% end %>

<%= render "devise/shared/links" %>
