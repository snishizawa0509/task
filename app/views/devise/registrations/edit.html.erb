<div class="page-header">
  <h1>ユーザー情報編集 <%= current_user.name %></h1>
</div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }, html: { class: "form-horizontal note" }) do |f| %>

  <% if resource.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= resource.errors.count %> 件のエラーがあります。</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% resource.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

<h3>アカウントの編集</h3>
  <div class="form-group">
    <%= f.label 'ユーザーネーム', class: 'control-label col-lg-3' %>
    <div class="col-lg-7">
      <%= f.text_field :name, autofocus: true, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :メールアドレス, :class => 'control-label col-lg-3' %>
    <div class="col-lg-7">
      <%= f.email_field :email, autofocus: true, class: 'form-control' %>
    </div>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="form-group">
    <%= f.label :パスワード変更, class: 'control-label col-lg-3' %>
    <div class="col-lg-7">
      <%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: '変更しない場合は空欄にして下さい。(6文字以上)' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :パスワード変更確認, class: 'control-label col-lg-3' %>
    <div class="col-lg-7">
      <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :現在のパスワード, class: 'control-label col-lg-3' %>
    <div class="col-lg-7">
      <%= f.password_field :current_password, autocomplete: "off", class: 'form-control', placeholder: "変更するために現在のパスワードが必要です。" %>
    </div>
  </div>
  <%= f.submit "Update", class: 'btn primary-btn' %>
<% end %>

<br><br>
<h3>アカウントの削除</h3>
<div class="form-group">
  <p>以下のボタンを押すことであなたのアカウントを削除します。削除した場合、削除した情報は取り戻すことはできないので注意して下さい。</p>
  <%= button_to "アカウント削除", registration_path(resource_name), data: { confirm: "アカウントを削除します。本当に削除しますか？" }, method: :delete, class: 'btn primary-btn' %>
  <%= link_to "Back", :back %>
</div>
