<%- model_class = Note -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>

  <%= form_tag notes_path, method:'get', class: "form-inline" do %>
    <%= text_field_tag :word, @search_word , class: "form-control" %>
    <%= select_tag :user_id, options_from_collection_for_select(User.all, :id, :name, @user_key), :include_blank => true, class: "form-control" %>
      <%= submit_tag "検索", class: "btn primary-btn" %>
    <% end %> 

<table class="table table-striped">
<%= page_entries_info @notes %>
  <thead>
    <tr>
      <th class="col-md-3"><%= model_class.human_attribute_name(:title) %></th>
      <th class="col-md-3"><%= model_class.human_attribute_name(:category_id) %></th>
      <th class="col-md-2"><%= model_class.human_attribute_name(:user_id) %></th>
      <th><%= model_class.human_attribute_name(:image) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @notes.each do |note| %>
      <tr>
        <td><%= link_to note.title, note_path(note) %></td>
        <td><%= note.category.name.truncate(20, omission: '...') %></td>
        <td><%= note.user.name %></td>
        <td>
          <% if note.image.present? %>
            <%= 'Have' %>
          <% else %>
            <%= 'Noting'%>
          <% end %>
        </td>
        <td>
        <% if current_user != nil && current_user.id == note.user_id  %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_note_path(note), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      note_path(note),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        <% end %>
        </td>
      </tr>
    <% end %>
    <%= paginate @notes %>
  </tbody>
</table>
