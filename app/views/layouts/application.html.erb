<!DOCTYPE html>
<html>
  <head>
    <title>blogapp</title>
      <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
      <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
      <%= csrf_meta_tags %>
  </head>
  <body>
    <header class="navbar">
    <div class="container">
    <div id="logo">BLOG</div>
    <ul class="header-right">
      <li><%= link_to "トップ", root_path %></li>  
      <li><%= link_to "投稿一覧", notes_path %></li>
      <% if user_signed_in? %>
        <li><%= link_to "新規投稿", new_note_path %></li>
        <li><%= link_to "ユーザー情報", edit_user_registration_path %></li>
        <li><%= link_to "カテゴリ管理", categories_path %></li> 
        <li><%= link_to "ログアウト", destroy_user_session_path, method: :delete %></li> 
        <li><%= current_user.name %></li>  
    　<% else %>
        <li><%= link_to "ユーザー登録", new_user_registration_path %></li>
        <li><%= link_to "ログイン", new_user_session_path %></li>
      <% end %>
    </ul>
    </div>
    </header>

    <div class="container">
      <%= yield %>
    </div>

    <div class="container">
      <footer class="footer">
      </footer>
    </div>
  </body>
</html>
